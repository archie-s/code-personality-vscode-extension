{
  "name": "code-personality-themes",
  "publisher": "jarchie",
  "displayName": "Code Personality",
  "description": "",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/archie-s/code-personality-themes"
  },
  "bugs": {
    "url": "https://github.com/archie-s/code-personality-themes/issues"
  },
  "homepage": "https://github.com/archie-s/code-personality-themes#readme",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codePersonalityThemes.ping",
        "title": "Code Personality Themes: Ping"
      }
    ],
    "themes": [
      {
        "label": "Personality: Calm",
        "uiTheme": "vs-dark",
        "path": "./themes/calm-color-theme.json"
      },
      {
        "label": "Personality: Focus",
        "uiTheme": "vs-dark",
        "path": "./themes/focus-color-theme.json"
      },
      {
        "label": "Personality: Panic",
        "uiTheme": "vs-dark",
        "path": "./themes/panic-color-theme.json"
      }
    ],
    "configuration": {
      "title": "Code Personality Themes",
      "properties": {
        "codePersonalityThemes.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic theme switching."
        },
        "codePersonalityThemes.calmTheme": {
          "type": "string",
          "default": "Personality: Calm",
          "description": "Theme name used for Calm mode."
        },
        "codePersonalityThemes.focusTheme": {
          "type": "string",
          "default": "Personality: Focus",
          "description": "Theme name used for Focus mode."
        },
        "codePersonalityThemes.panicTheme": {
          "type": "string",
          "default": "Personality: Panic",
          "description": "Theme name used for Panic mode."
        },
        "codePersonalityThemes.panicErrorThreshold": {
          "type": "number",
          "default": 5,
          "description": "If total diagnostics >= this number, switch to Panic."
        },
        "codePersonalityThemes.focusTypingBurstThreshold": {
          "type": "number",
          "default": 12,
          "description": "If edits in the last 10 seconds >= this number, switch to Focus."
        },
        "codePersonalityThemes.idleSecondsForCalm": {
          "type": "number",
          "default": 20,
          "description": "If idle for this many seconds, switch to Calm."
        },
        "codePersonalityThemes.cooldownSeconds": {
          "type": "number",
          "default": 15,
          "description": "Minimum seconds between theme switches."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
